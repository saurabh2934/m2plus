public class solution{
	public static String removePi(String str){
		if(str.length() <=1){
			return str;
			}
		if(str.charAt(0)=='p' || str.charAt(1)=='i'){
				//call on recursion on length n-2
				String s=removePi(str.substing(2);
				return '3.14'+s;
			}else{
			    //call on recursion on string of lingth n-1
				String s=removePi(str.substring(1));
				return str.charAt(0)+s;
			}
		}
}
